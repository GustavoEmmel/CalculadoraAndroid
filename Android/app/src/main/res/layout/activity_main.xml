<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.aluno.android.MainActivity">

    <EditText
        android:text=""
        android:id="@+id/textNumber"
        android:layout_width="match_parent"
        android:textSize="30sp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <TextView
        android:text="res..."
        android:id="@+id/textResult"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:layout_weight="4"
     tools:context="com.example.aluno.android.MainActivity">

     <LinearLayout
         xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:tools="http://schemas.android.com/tools"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:layout_weight="0.25"
         tools:context="com.example.aluno.android.MainActivity">
         <Button
             android:text="1"
             android:id="@+id/numberOne"
             android:layout_width="wrap_content"
             android:textSize="30sp"
             android:layout_weight="1"
             android:layout_height="wrap_content" />
         <Button
             android:text="4"
             android:id="@+id/numberFour"
             android:layout_width="wrap_content"
             android:textSize="30sp"
             android:layout_weight="1"
             android:layout_height="wrap_content" />
         <Button
             android:text="7"
             android:id="@+id/numberSeven"
             android:layout_width="wrap_content"
             android:textSize="30sp"
             android:layout_weight="1"
             android:layout_height="wrap_content" />
         <Button
             android:text=""
             android:visibility="invisible"
             android:layout_width="wrap_content"
             android:textSize="30sp"
             android:layout_weight="1"
             android:layout_height="wrap_content" />
     </LinearLayout>

     <LinearLayout
         xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:tools="http://schemas.android.com/tools"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:layout_weight="0.25"
         tools:context="com.example.aluno.android.MainActivity">
         <Button
             android:text="2"
             android:id="@+id/numberTwo"
             android:layout_width="wrap_content"
             android:textSize="30sp"
             android:layout_weight="1"
             android:layout_height="wrap_content" />
         <Button
             android:text="5"
             android:id="@+id/numberFive"
             android:layout_width="wrap_content"
             android:textSize="30sp"
             android:layout_weight="1"
             android:layout_height="wrap_content" />
         <Button
             android:text="8"
             android:id="@+id/numberEight"
             android:layout_width="wrap_content"
             android:textSize="30sp"
             android:layout_weight="1"
             android:layout_height="wrap_content" />
         <Button
             android:text="0"
             android:id="@+id/numberZero"
             android:layout_width="wrap_content"
             android:textSize="30sp"
             android:layout_weight="1"
             android:layout_height="wrap_content" />
     </LinearLayout>

     <LinearLayout
         xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:tools="http://schemas.android.com/tools"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:layout_weight="0.25"
         tools:context="com.example.aluno.android.MainActivity">
         <Button
             android:text="3"
             android:id="@+id/numberThree"
             android:layout_width="wrap_content"
             android:textSize="30sp"
             android:layout_weight="1"
             android:layout_height="wrap_content" />
         <Button
             android:text="6"
             android:id="@+id/numberSix"
             android:layout_width="wrap_content"
             android:textSize="30sp"
             android:layout_weight="1"
             android:layout_height="wrap_content" />
         <Button
             android:text="9"
             android:id="@+id/numberNine"
             android:layout_width="wrap_content"
             android:textSize="30sp"
             android:layout_weight="1"
             android:layout_height="wrap_content" />
         <Button
             android:text=""
             android:visibility="invisible"
             android:layout_width="wrap_content"
             android:textSize="30sp"
             android:layout_weight="1"
             android:layout_height="wrap_content" />
     </LinearLayout>
     <LinearLayout
         xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:tools="http://schemas.android.com/tools"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:layout_weight="0.25"
         tools:context="com.example.aluno.android.MainActivity">
         <Button
             android:text="+"
             android:id="@+id/buttonPlus"
             android:layout_width="wrap_content"
             android:textSize="30sp"
             android:layout_weight="1"
             android:layout_height="wrap_content" />
         <Button
             android:text="-"
             android:id="@+id/buttonMinus"
             android:layout_width="wrap_content"
             android:textSize="30sp"
             android:layout_weight="1"
             android:layout_height="wrap_content" />
         <Button
             android:text="/"
             android:id="@+id/buttonDivision"
             android:layout_width="wrap_content"
             android:textSize="30sp"
             android:layout_weight="1"
             android:layout_height="wrap_content" />
         <Button
             android:text="*"
             android:id="@+id/buttonMultiply"
             android:layout_width="wrap_content"
             android:textSize="30sp"
             android:layout_weight="1"
             android:layout_height="wrap_content" />
     </LinearLayout>

 </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        tools:context="com.example.aluno.android.MainActivity">

        <Button
            android:text="="
            android:id="@+id/buttonResult"
            android:layout_width="wrap_content"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:text="limpa"
            android:id="@+id/buttonClean"
            android:layout_width="wrap_content"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
